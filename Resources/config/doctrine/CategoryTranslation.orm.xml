<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity name="Proxia\Cms\Entity\CategoryTranslation" table="categories_lang">
        <id name="category" association-key="true"/>
        <id name="language" type="string"/>

        <field name="title"/>
        <field name="description"/>
        <field name="quickHelp"/>
        <field name="isTranslationVisible" column="language_is_visible" type="boolean"/>
        <field name="localizedImage"/>

        <many-to-one field="category" inversed-by="translations" target-entity="Proxia\Cms\Entity\Category">
            <join-column name="category_id"/>
        </many-to-one>
    </entity>
</doctrine-mapping>